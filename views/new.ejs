<%- include('partials/header')  %>
	<main class="centered-content">
		<section class="form-container">
			<h1>Add New Campground</h1>
			<form action="/campgrounds" method='POST'>
				<div class="form-field">
					<label for="name">Name: </label>
					<input type="text" id="name" name="name" placeholder="Enter campground name">
				</div>
				<div class="form-field">
					<label for="image">Image: </label>
					<input type="url" name="image" id="image" placeholder="Enter image URL">
				</div>
				<div class="form-field">
					<label for="description">Description: </label>
					<input type="text" name="description" id="description" placeholder="Enter description">
				</div>
				<button type="submit" class="button form-button">Add Campground</button>
			</form>
		</section>
		<a href="/campgrounds">Go back to Campgrounds</a>
	</main>
	

<%- include('partials/footer')  %>